<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="a2com.naphisaporn.homework.MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginStart="8dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text=" ํC to ํF"
        android:textColor="#009688"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="8dp" />

    <EditText
        android:id="@+id/edtName1"
        android:layout_width="352dp"
        android:layout_height="69dp"
        android:layout_margin="40dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="input Number  ํC or ํF"
        android:inputType="number"
        android:padding="25dp"
        android:typeface="monospace"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        />


    <TextView
        android:id="@+id/tv1"
        android:layout_width="259dp"
        android:layout_height="125dp"
        android:layout_margin="30dp"
        android:gravity="center"
        android:textColor="#b388ff"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@+id/edtName1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="186dp" />

    <Button
        android:id="@+id/btnCtoF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text=" ํC to ํF"
        android:textColor="#a00037"
        app:layout_constraintTop_toBottomOf="@+id/edtName1"
        app:layout_constraintRight_toRightOf="@id/tv1"
        app:layout_constraintStart_toEndOf="parent"
        tools:layout_editor_absoluteY="209dp" />

    <Button
        android:id="@+id/btnFtoC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ํF to ํC"
        android:textColor="#003c8f"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCtoF" />
</android.support.constraint.ConstraintLayout>
